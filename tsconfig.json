{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2019"],
    "target": "ES2019",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "prebuild",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
